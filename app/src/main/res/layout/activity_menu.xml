<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context=".ui.screen.menu.MenuActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_one"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="1"
        app:layout_constraintRight_toLeftOf="@id/menu_btn_one_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/menu_btn_three"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/menu_btn_one_divider"
        app:layout_constraintBottom_toTopOf="@id/menu_btn_four"
        app:layout_constraintTop_toTopOf="parent" />

<!--    <View-->
<!--        android:id="@+id/menu_btn_one_divider"-->
<!--        android:layout_width="8dp"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintLeft_toRightOf="@id/menu_btn_one"-->
<!--        app:layout_constraintRight_toLeftOf="@id/menu_btn_two"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/menu_btn_one"-->
<!--        android:layout_height="0dp"/>-->

    <Space
        android:id="@+id/menu_btn_one_divider"
        android:layout_width="8dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/menu_btn_one"
        app:layout_constraintRight_toLeftOf="@id/menu_btn_two"
        app:layout_constraintBottom_toBottomOf="@id/menu_btn_one"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_three"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@id/menu_btn_one"
        app:layout_constraintBottom_toTopOf="@id/menu_btn_five"
        app:layout_constraintRight_toLeftOf="@id/menu_btn_four"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_four"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/menu_btn_two"
        app:layout_constraintBottom_toTopOf="@id/menu_btn_six"
        app:layout_constraintLeft_toRightOf="@id/menu_btn_three"
        app:layout_constraintRight_toRightOf="parent"
        android:text="4" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_five"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="4dp"
        android:text="5"
        app:layout_constraintRight_toLeftOf="@id/menu_btn_six"
        app:layout_constraintTop_toBottomOf="@id/menu_btn_three"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_btn_six"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="4dp"
        android:text="6"
        app:layout_constraintTop_toBottomOf="@id/menu_btn_four"
        app:layout_constraintLeft_toRightOf="@id/menu_btn_five"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>