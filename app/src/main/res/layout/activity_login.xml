<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screen.login.LoginActivity">

    <Button
        android:id="@+id/login_btn_one_to_three"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/login_btn_one"
        app:layout_constraintRight_toLeftOf="@id/login_btn_three"
        app:layout_constraintTop_toTopOf="@id/login_btn_one"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_one"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        app:iconTint="@color/green"
        app:icon="@drawable/ic_android_black_24dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:textColor="@color/red"
        tools:textColor="@color/white"
        android:layout_marginTop="@dimen/padding_login_sample"
        tools:text="AAAA"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/login_btn_one_to_three"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="AAAAAA"
        android:text="@string/login_button_three"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/login_btn_one_to_three"
        app:layout_constraintTop_toTopOf="@id/login_btn_one" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_button_four"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/login_txt_sample"
        android:text="Vassilis"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_network_with_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:text="Network With List" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_fragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_btn_network_with_list"

        android:text="Fragments Screen" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_stroage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_btn_fragments"

        android:text="Storage Screen" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/login_btn_database"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_btn_stroage"

        android:text="Database Screen" />

</androidx.constraintlayout.widget.ConstraintLayout>