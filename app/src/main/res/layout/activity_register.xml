<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent"
    tools:context=".ui.screen.register.RegisterActivity">

    <TextView
        android:id="@+id/register_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:gravity="center"
        android:textSize="22sp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_edt_container_username"
        style="?attr/textInputOutlinedStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your username..."
        app:layout_constraintTop_toBottomOf="@id/register_txt_title">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_edt_container_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        style="?attr/textInputOutlinedStyle"
        app:layout_constraintTop_toBottomOf="@id/register_edt_container_username">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edt_password"
            android:layout_width="match_parent"
            android:inputType="numberPassword"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/register_edt_container_password_again"
        style="?attr/textInputOutlinedStyle"
        android:layout_width="match_parent"
        android:hint="Pass again your password"
        app:passwordToggleEnabled="true"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/register_txt_forgot_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_edt_password_again"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?attr/materialButtonOutlinedStyle"
        android:text="Cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/register_btn_register" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/register_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_edt_container_password_again" />

    <TextView
        android:id="@+id/register_txt_forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgot your password..."
        app:layout_constraintStart_toStartOf="parent"
        android:paddingVertical="8dp"
        android:textSize="12sp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/register_edt_container_password" />

</androidx.constraintlayout.widget.ConstraintLayout>